{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "proto:gen": {
      "cache": false,
      "inputs": ["src/proto/**/*.proto"],
      "outputs": ["src/generated/**"]
    },
    "build": {
      "dependsOn": ["^build", "proto:generate"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["proto:generate"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "dependsOn": ["^lint"]
    }
  }
}
